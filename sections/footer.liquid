{% include 'footer-top' %}

<!-- Footer Bottom Section Start -->
<div class="footer-bottom-section section {% if section.settings.snow_enable %}rel-area{%endif%}"> 
  
  {%- if section.settings.snow_enable -%}
  <span class="effect-body ice_effect"></span>
  {%- endif -%} 
  
  <div class="container">
    <div class="row align-items-center">

      {% if section.settings.copy_ritht_text_enable %}
      <div class="copyright {% if section.settings.payment_method_image_enable  %} col-lg-6 {% else %} col-lg-12 text-center{% endif %} col-12">
        {{ section.settings.copy_ritht_text }}
      </div>
      {% endif %}
	
      {% if section.settings.payment_method_image_enable  %}
      <div class="payment-method {% if section.settings.copy_ritht_text_enable %} col-lg-6 {% else %} col-lg-12 text-center {% endif %} col-12">
        {% if section.settings.payment_method_image %}
        <img src="{{ section.settings.payment_method_image | img_url: '387x22' }}" alt="{{ section.settings.payment_method_image.alt }}">
        {% else %}
        <img src="https://cdn.shopify.com/s/files/1/0114/0994/8731/files/payment-method.png?887" alt="{{ section.settings.payment_method_image.alt }}">
        {% endif %}
      </div>
      {% endif %}

    </div>
  </div>
</div><!-- Footer Bottom Section End -->


{%- style -%}


  .footer-top-section {
    background-color: {{ section.settings.footer_top_bg_color }} !important;
  }
  .footer-top-section,
  .footer-widget p,
  .footer-widget p a,
  .footer-widget .title,
  .footer-widget ul li a {
    color: {{ section.settings.footer_top_color }};
  }
  .footer-widget p a:hover,
  .footer-widget ul li:hover a {
    color: {{ section.settings.footer_top_link_hover_color }};
  }


.footer-bottom-section {
    background-color: {{ section.settings.footer_copyright_bg_color }};
}
.footer-bottom-section,
.footer-bottom-section p,
.footer-bottom-section p a {
    color: {{ section.settings.footer_copyright_color }};
}
.footer-bottom-section p a:hover {
    color: {{ section.settings.footer_copyright_link_hover_color }};
}

{%- endstyle -%}


{% schema %}
  {
    "name": "Footer",
    "settings": [
		{
          "type"	: "header",
          "content"	: "Footer Copyright"
        },
		{
          "type"	: "richtext",
          "id"		: "copy_ritht_text",
          "label"	: "CopyRight Text",
		  "default"	: "<p>Copyright Â© 99 Shopify All Right Reserved.</p>"
		},
		{
          "type"	: "checkbox",
          "id"		: "copy_ritht_text_enable",
          "label"	: "Show Copyright Text",
 		  "default"	: true
		},
		{
          "type"	: "image_picker",
          "id"		: "payment_method_image",
          "label"	: "Payment Method Image",
 		  "info"	: "Recommended Size: 387 x 22px"
		},
		{
          "type"	: "checkbox",
          "id"		: "payment_method_image_enable",
          "label"	: "Show Payment Method Image",
 		  "default"	: true
		},
		{
          "type"	: "header",
          "content"	: "Footer Copyright Style"
        },
		{
          "type"	: "color",
          "id"		: "footer_copyright_bg_color",
          "label"	: "Footer Copyright Background Color",
		  "default"	: "#222"
		},
		{
          "type"	: "color",
          "id"		: "footer_copyright_color",
          "label"	: "Footer Copyright Color",
		  "default"	: "#d8d8d8"
		},
		{
          "type"	: "color",
          "id"		: "footer_copyright_link_hover_color",
          "label"	: "Footer Copyright Link Hover Color",
		  "default"	: "#d0a97e"
		},
		{
          "type"	: "header",
          "content"	: "Footer Top Style"
        },
		{
          "type"	: "color",
          "id"		: "footer_top_bg_color",
          "label"	: "Footer Top Background Color",
		  "default"	: "#222"
		},
		{
          "type"	: "color",
          "id"		: "footer_top_color",
          "label"	: "Footer Top Color",
		  "default"	: "#d8d8d8"
		},
		{
          "type"	: "color",
          "id"		: "footer_top_link_hover_color",
          "label"	: "Footer Top Link Hover Color",
		  "default"	: "#d0a97e"
		},
        {
          "type": "header",
          "content": "Snow Fall"
        },
        {
            "type": "checkbox",
            "id": "snow_enable",
            "label": "Snow Fall Enable",
            "default": false		
        }
    ],
	"blocks":[
	   {
          "type": "about_info",
          "name": "Footer About Info",
          "settings": [
            {
			  	"type": "image_picker",
			  	"id": "footer_logo_image",
			  	"label": "Footer Logo Image",
 				"info": "Recommended Size: 98 x 47px"
			},
			{
			  	"type": "richtext",
			  	"id": "footer_about_brief",
			  	"label": "Footer About Brief",
				"default": "<p>We provide the best Beard oil all over the world. We are the worldd best store for Beard Oil. You can buy our</p>"
			}
          ]
       },
	   {
          "type": "footer_menu",
          "name": "Footer Menu",
          "settings": [
            {
			  "type": "link_list",
			  "id": "footer_menu_handle",
			  "label": "Slect menu"
			},
			{
				"type"		:	"text",
				"id"		:	"footer_menu_title",
				"label"		:	"Footer Menu Title",
				"default"	:	"Footer Menu Title"
			}
          ]
       }
	]
  }

{% endschema %}