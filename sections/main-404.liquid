<div class="theme-default-margin">
  <div class="container">	
    <div class="row">
      <div class="col-lg-12 col-12">
        <div class="error-content text-center">
          {% if section.settings.opps_404 %}
          <img src="{{ section.settings.opps_404 | img_url: '1024x1024' }}" alt="" />
          {% endif %}
          {% if section.settings.heading_404 !='' %}
          <h4>{{ section.settings.heading_404 }}</h4>
          {% endif %}
          {% if section.settings.sub_text_404 !='' %}
          <p>{{ section.settings.sub_text_404 }}</p>
          {% endif %}
          {% if section.settings.button_title !='' %}
          <a class="theme-default-button" href="{{ section.settings.button_url }}" data-text="{{ section.settings.button_title }}" >{{ section.settings.button_title }}</a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "404 Page",
    "settings": [
      {
        "type": "image_picker",
        "id": "opps_404",
        "label": "Image",
        "info": "Recommended Size: 1000 X 350px"
      },
      {
        "type": "text",
        "id": "heading_404",
        "label": "Heading 404",
        "default": "Ooops! Error 404"
      },
      {
        "type": "text",
        "id": "sub_text_404",
        "label": "Sub Text",
        "default": "Sorry, But the page you are looking for does't exist!"
      },
      {
        "type": "text",
        "id": "button_title",
        "label": "Button Title",
        "default": "Go to home page"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button URL",
        "default": "\/"
      }
	]
  }
{% endschema %}

