<ul class="comment-list">
  {% for comment in article.comments %}
  <li>
    <div class="comment">
      <div class="image">
        {% if section.settings.commentator_image %}
        <img src="{{ section.settings.commentator_image | img_url: 'small' }}" alt="{{ section.settings.commentator_image.alt }}">
        {% else %}
        <img src="{{ 'default-user-image_small.png' | asset_url }}" alt="author" />
        {% endif %}
      </div>
      <div class="content">
        <h5>{{ comment.author }}</h5>
        <div class="d-flex flex-wrap justify-content-between">
          <span class="time">{{ comment.created_at | date: "%b %d, %Y at %H:%M" }}</span>
        </div>
        <div class="decs">
          <p>{{ comment.content }}</p>
        </div>
      </div>
    </div>
  </li>
  {% endfor %}
</ul>